<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="M335_quizlet.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:M335_quizlet"
    Shell.FlyoutBehavior="Disabled"
    Title="M335_quizlet">

    <Tab Title="MainPage">
        <ShellContent 
            Title="MainPage"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            />

        <ShellContent 
            Title="Add a Book"
            ContentTemplate="{DataTemplate local:AddFlashCard}"
            Route="AddFlashCard"
            />

        <ShellContent 
            Title="Modify a Book"
            ContentTemplate="{DataTemplate local:ModifyFlashCard}"
            Route="ModifyFlashCard"
            />

        <ShellContent 
            Title="Delte a Book"
            ContentTemplate="{DataTemplate local:DeleteFlashcard}"
            Route="DeleteFlashcard"
            />
    </Tab>

</Shell>
