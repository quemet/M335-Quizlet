<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="M335_Quizlet.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:M335_Quizlet"
    Shell.FlyoutBehavior="Disabled"
    Title="M335_Quizlet">


    <Tab Title="MainPage">
        <ShellContent 
            Title="MainPage"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            />
    </Tab>

    <Tab Title="Add a Quiz">
        <ShellContent 
            Title="Add a Book"
            ContentTemplate="{DataTemplate local:AddQuiz}"
            Route="AddFlashCard"
            />
    </Tab>

    <Tab Title="Modify a Quiz">
        <ShellContent 
            Title="Modify a Quiz"
            ContentTemplate="{DataTemplate local:ModifyQuiz}"
            Route="ModifyFlashCard"
            />
    </Tab>

    <Tab Title="Delte a Quiz">
        <ShellContent 
            Title="Delte a Quiz"
            ContentTemplate="{DataTemplate local:DeleteQuiz}"
            Route="DeleteFlashcard"
            />
    </Tab>
</Shell>

