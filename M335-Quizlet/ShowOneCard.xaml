<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M335_Quizlet.ShowOneCard"
             xmlns:viewModels="clr-namespace:M335_Quizlet.viewModels"
             Title="ShowOneCard">

    <ContentPage.BindingContext>
        <viewModels:Game x:Name="vm" />
    </ContentPage.BindingContext>

    <VerticalStackLayout BackgroundColor="#9BBEC7">

        <Label Text="{Binding CardName}" BackgroundColor="#BD8B9C" TextColor="White" WidthRequest="200" HeightRequest="400" />

        <Frame BackgroundColor="#BD8B9C" CornerRadius="90">
            <Button BackgroundColor="#BD8B9C" Command="{Binding NextCardCommand}" Text="Suivant" TextColor="White" />
        </Frame>
        
    </VerticalStackLayout>
</ContentPage>